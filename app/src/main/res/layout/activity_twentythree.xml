<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tenthscreen"
    android:weightSum="1"
    android:background="#000"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.01"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back18"
            ></ImageView>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Profile"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            ></TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pen22"
            ></ImageView>


    </LinearLayout

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/circle"

            ></ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Username"
            android:textColor="#e0af1f"
            android:textSize="30dp"
            android:layout_marginLeft="140dp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="email"
            android:textColor="#e0af1f"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Playlists: 4"
            android:textColor="#e0af1f"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Songs: 4"
            android:textColor="#e0af1f"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:background="#A9A9"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.024"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart5"

            >

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.024"
            android:layout_marginTop="10dp"
            android:src="@drawable/plus5"

            >

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.024"
            android:layout_marginTop="10dp"
            android:src="@drawable/search5"

            >

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.024"
            android:layout_marginTop="10dp"
            android:src="@drawable/clock5"

            >

        </ImageView>


    </LinearLayout>
</LinearLayout>
