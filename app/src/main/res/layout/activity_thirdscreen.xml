<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thirdscreen"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#000"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.2">

        <ImageView
            android:layout_weight="0.25"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/musifylogo"
            >

        </ImageView>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.12">
    <TextView
        android:layout_weight="0.25"
         android:layout_height="100dp"
         android:layout_width="200dp"
         android:text="Musify"
         android:gravity="left"
         android:layout_margin="10dp"
         android:textSize="40dp"
         android:textStyle="bold"
         android:textColor="#FFFFFF"
        >

    </TextView>
        >

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.04"
        >
        <EditText
            android:layout_weight="0.01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Name"
            android:background="@drawable/corners"
            android:textColor="#e0af1f"
            android:textSize="30dp"
            android:layout_margin="15dp"
            >


        </EditText>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.04"
        >
        <EditText
            android:layout_weight="0.01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Email"
            android:background="@drawable/corners"
            android:textColor="#e0af1f"
            android:textSize="30dp"
            android:layout_margin="15dp"
            >


        </EditText>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.04"
        >
        <EditText
            android:layout_weight="0.01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Password"
            android:background="@drawable/corners"
            android:textColor="#e0af1f"
            android:textSize="30dp"
            android:layout_margin="15dp"
            >


        </EditText>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="20dp"
            android:textColor="#e0af1f"
            >

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_weight="0.1"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="0.03"
            android:layout_margin="0.01dp"
            android:src="@drawable/male2"
            >

        </ImageView>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="0.03"
            android:src="@drawable/female2"
            >

        </ImageView>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="0.03"
            android:src="@drawable/binary2"
            >

        </ImageView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/corners"
            >

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="I would like to receive your newsletter and other promotional information"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            >

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.1"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/cornersyellow"
            android:layout_margin="10dp">


        </ImageView>


    </LinearLayout>


</LinearLayout>