<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thirdscreen"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#000"
    android:gravity="center"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.08"
        >
        <Button
         android:layout_height="50dp" android:layout_width="150dp"
         android:text="Sign in"
            android:textColor="#FFFF"
            android:background="#00000"
            android:layout_alignParentRight="true"


            >
        </Button>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_weight="0.1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/musifylogo"
            >

        </ImageView>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.12">
    <TextView
         android:layout_height="60dp"
         android:layout_width="match_parent"
         android:text="Musify"
         android:gravity="left"
         android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
         android:textSize="35dp"
         android:textStyle="bold"
         android:textColor="#FFFFFF"
        >

    </TextView>
        >

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:background="@drawable/corners"
            android:textColorHint="#e0af1f"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            tools:ignore="HardcodedText">


        </EditText>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:orientation="vertical"
        >
        <EditText
            android:layout_weight="0.01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:background="@drawable/corners"
            android:textColorHint="#e0af1f"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >


        </EditText>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:orientation="vertical"
        >
        <EditText
            android:layout_weight="0.01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:background="@drawable/corners"
            android:textColorHint="#e0af1f"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >


        </EditText>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/show"
            ></ImageView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Gender"
            android:textSize="20dp"
            android:textColor="#e0af1f"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_weight="0.1"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="0.03"
            android:layout_margin="0.01dp"
            android:src="@drawable/male2"
            >

        </ImageView>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="0.03"
            android:src="@drawable/female2"
            >

        </ImageView>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="0.03"
            android:src="@drawable/binary2"
            >

        </ImageView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/square"
            >

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="I would like to receive your newsletter and other promotional information"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            >

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.11"

        >
       <Button
           android:layout_weight="0.1"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="@drawable/cornersyellow"
           android:text="Sign up"
           android:textColor="#FFFF"
           android:textSize="20dp"
           android:layout_margin="10dp"
           >

       </Button>



    </LinearLayout>



</LinearLayout>