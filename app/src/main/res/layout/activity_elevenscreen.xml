<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tenthscreen"
    android:weightSum="1"
    android:background="#000"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.01"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back18"
            ></ImageView>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Upload Music"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            ></TextView>
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Next"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#e0af1f"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            ></TextView>

    </LinearLayout
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/cloud9"
            ></ImageView>>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Title"
            android:gravity="center_vertical"
            android:background="@drawable/corners"
            android:textColorHint="#e0af1f"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            tools:ignore="HardcodedText">


        </EditText>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Genre"
            android:gravity="center_vertical"
            android:background="@drawable/corners"
            android:textColorHint="#e0af1f"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            tools:ignore="HardcodedText">


        </EditText>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Description"
            android:gravity="center_vertical"
            android:background="@drawable/corners"
            android:textColorHint="#e0af1f"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            tools:ignore="HardcodedText">


        </EditText>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_weight="0.02"
            android:layout_marginLeft="50dp"
            android:src="@drawable/cornersyellow"
            >

        </ImageView>
        <TextView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="0.02"
            android:text="Upload"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="80dp"
            ></TextView>
        <TextView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="0.02"
            android:text="Record"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="250dp"
            ></TextView>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.024"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart5"
            android:background="#A9A9"
            >

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.024"
            android:layout_marginTop="10dp"
            android:src="@drawable/plus5"
            >

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.024"
            android:layout_marginTop="10dp"
            android:src="@drawable/search5"
            android:background="#A9A9"
            >

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.024"
            android:layout_marginTop="10dp"
            android:src="@drawable/clock5"
            android:background="#A9A9"
            >

        </ImageView>


    </LinearLayout>


</LinearLayout>
